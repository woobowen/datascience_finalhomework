<Window x:Class="KPLAssistant.TeamAnalysisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="战队风格AI分析报告" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        FontFamily="Microsoft YaHei UI"
        Foreground="#E0E0E0">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="TechTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#1C212B" Offset="0"/>
                <GradientStop Color="#12151C" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Image Source="C:\Users\lenovo\Desktop\暑期课\大作业\其它图片\背景.png" Stretch="UniformToFill" Opacity="0.1" />

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderBrush="{StaticResource BorderColorBrush}" BorderThickness="1" Padding="15" CornerRadius="5" Background="#331C212B" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Label Content="选择目标战队:" FontWeight="Bold" VerticalAlignment="Center" Foreground="White" FontSize="16" Margin="0,0,10,0"/>
                    <ComboBox x:Name="TeamComboBox" Width="200" Height="35" FontSize="14" VerticalContentAlignment="Center" SelectionChanged="TeamComboBox_SelectionChanged"/>

                    <Image x:Name="LogoImage" Height="50" Width="50" Margin="20,0,20,0"/>

                    <Button x:Name="BtnGenerateReport" Content="生成AI战队报告" Style="{StaticResource TechButtonStyle}" Width="150" Height="35" Click="BtnGenerateReport_Click"/>
                </StackPanel>
            </Border>

            <GroupBox Grid.Row="1" Header="AI 深度分析报告" Style="{StaticResource TechGroupBoxStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0" Margin="10" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="ReportTextBox" Text="请选择战队并点击生成按钮，AI将根据历史数据为您分析..." 
                                   FontSize="16" LineHeight="28" TextWrapping="Wrap" Foreground="#DDDDDD"/>
                    </ScrollViewer>

                    <TextBlock Grid.Row="1" Text="注：本报告由 Python 机器学习算法 (K-Means聚类) 结合数据库统计生成" 
                               Foreground="#666666" FontStyle="Italic" HorizontalAlignment="Right" Margin="10"/>

                    <Border x:Name="LoadingOverlay" Background="#AA000000" Visibility="Collapsed" Grid.RowSpan="2">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="正在进行数据清洗与模型运算..." Foreground="{StaticResource AccentColorBrush}" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>